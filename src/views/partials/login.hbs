<div id="root" class="container mt-5">
    <div id="login" class="jumbotron">
        <h1 style="color:blue;">Login de Usuario</h1>
        <br>
        <form class="form" action="/login" method="post" role="form" autocomplete="off">
            <div class="form-group">
                <label for="email"><b>Correo electrónico:</b></label>
                <input id="email" class="form-control" type="email" name="email" pattern=".+\@.+\..+" required>
            </div>
            <div class="form-group">
                <label for="password"><b>Contraseña:</b></label>
                <input id="password" class="form-control" type="password" name="password" required>
            </div>
            <div class="form-group text-right">
                <button class="btn btn-success mt-2 mb-2" type="submit" value="Login">Entrar</button>
            </div>
        </form>
        <hr>
        <div class="text-left">
            <button class="btn btn-secondary my-0" onclick="location.href = '/register'">Ir a Register</button>
        </div>
    </div>    
</div>
